{
  "compilerOptions": {
    "target": "es2015",                            
    "module": "commonjs",                            
    "strict": true,                                      
    "esModuleInterop": true,                             
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
      },
    "types": ["./src/types/custom.d.ts"],
    "allowJs": true,
  },

  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
